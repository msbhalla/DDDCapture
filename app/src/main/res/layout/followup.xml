<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#E8E8E8"
    tools:context=".Followup"
     android:layout_height="match_parent">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_margin="10dp"
     android:orientation="vertical"
     >

     <TextView
         android:layout_width="wrap_content"
         android:text="Category"
         android:layout_marginTop="10dp"
         android:textColor="#000"
         android:layout_marginLeft="10dp"
         android:textStyle="bold"
         android:layout_height="wrap_content"></TextView>
    <RadioGroup
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:weightSum="3"
        android:layout_height="40dp">

        <RadioButton
            android:id="@+id/radio_interested"
            android:text="Interested"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

        </RadioButton>

        <RadioButton
            android:id="@+id/radio_notinterested"
            android:text="Not Interested"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

        </RadioButton>
        <RadioButton
            android:id="@+id/radio_purchased"
            android:text="Already Purchased"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

        </RadioButton>
    </RadioGroup>
     <android.support.design.widget.TextInputLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="5dp">

         <EditText
             android:id="@+id/edit_cust_mobno"
             android:layout_width="match_parent"
             android:layout_height="@dimen/edit_height_lead"
             android:layout_margin="5dp"
             android:background="#FFFFFF"
             android:maxLength="10"
              android:paddingLeft="4dp"
             android:hint="Mobile Number"
             android:inputType="phone"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             />
         /></android.support.design.widget.TextInputLayout>
<LinearLayout
    android:id="@+id/lin_prod_qty"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:weightSum="2"
        android:layout_height="55dp">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            >

            <EditText
                android:id="@+id/edit_product"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height_lead"
                android:layout_marginRight="4dp"
                android:paddingLeft="4dp"
                android:background="#FFFFFF"
                android:hint="Product Name"

                />
            /></android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            >

            <EditText
                android:id="@+id/edit_product_qty"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height_lead"
                android:background="#FFFFFF"
                android:paddingLeft="4dp"
                android:maxLength="10"
                android:hint="Quantity"
                android:inputType="phone"

                />
            /></android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp">
        <EditText
            android:id="@+id/editAmount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:paddingLeft="4dp"
            android:maxLength="10"
            android:hint="Amount"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="number"
            />
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="Purchase From"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"></TextView>
    <RadioGroup
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:weightSum="4"
        android:layout_height="40dp">

        <RadioButton
            android:id="@+id/radio_van"
            android:text="Van"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

        </RadioButton>
        <RadioButton
            android:id="@+id/radio_dealer"
            android:text="Dealer"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

        </RadioButton>
        <RadioButton
            android:id="@+id/radio_vle"
            android:text="VLE/SEP"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

        </RadioButton>

        <RadioButton
            android:id="@+id/radio_others"
            android:text="Others"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

        </RadioButton>
    </RadioGroup>

</LinearLayout>
    <android.support.design.widget.TextInputLayout

        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/edit_reamrks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingLeft="4dp"
            android:hint="Remarks.."
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="textMultiLine"
            android:lines="4"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:singleLine="false"
             android:minLines="4"
            android:gravity="top|left"
            android:maxLines="10"
            android:scrollbars="vertical"
            />
        /></android.support.design.widget.TextInputLayout>


     <Button
         android:id="@+id/buttonSaveLead"
         android:layout_width="match_parent"
         android:background="@color/colorPrimary"
         android:textColor="#ffffff"
         android:layout_marginTop="15dp"
         android:layout_margin="5dp"
         android:layout_height="wrap_content"
         android:text="SUBMIT"
         />
 </LinearLayout>

</LinearLayout>
