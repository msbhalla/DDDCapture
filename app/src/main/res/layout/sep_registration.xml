<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars = "vertical"
    android:fillViewport="true"
    android:scrollbarStyle="insideInset">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#E8E8E8"
        tools:context=".AddNewLead">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/editTextSalesRepEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height_lead"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:ems="10"
                    android:hint="Your @dlight.com mail address"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/emailAddress"
                    /></android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/edit_cust_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height_lead"
                    android:layout_margin="5dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="4dp"
                    android:hint="SEP Name"
                    android:inputType="text"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    />
                /></android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/edit_cust_mobno"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height_lead"
                    android:layout_margin="5dp"
                    android:background="#FFFFFF"
                    android:maxLength="10"

                    android:paddingLeft="4dp"
                    android:hint="SEP Mobile Number"
                    android:inputType="phone"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    />
                /></android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/edit_cust_aadhar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height_lead"
                    android:layout_margin="5dp"
                    android:background="#FFFFFF"
                    android:maxLength="12"
                    android:paddingLeft="4dp"
                    android:hint="SEP Aadhar Number"
                    android:inputType="number"
                     android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="60dp"
                    >
                    <EditText
                        android:id="@+id/edit_sep_emailid"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_height_lead"
                        android:layout_margin="5dp"
                        android:paddingLeft="4dp"


                        android:hint="SEP Email (Optional)"
                        android:background="#FFFFFF"
                        android:inputType="textEmailAddress"
                        />
                </android.support.design.widget.TextInputLayout>
                <Spinner
                    android:id="@+id/spinner_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="2dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown" />
                <android.support.design.widget.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <EditText
                        android:id="@+id/edit_cust_district"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_height_lead"
                        android:layout_margin="5dp"
                        android:background="#FFFFFF"
                        android:hint="SEP District"
                        android:inputType="text"
                        android:paddingLeft="4dp" />
                    />
                </android.support.design.widget.TextInputLayout>
                /></android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/edit_cust_city"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height_lead"
                    android:layout_margin="5dp"
                    android:background="#FFFFFF"
                    android:hint="SEP City/Town"
                    android:paddingLeft="4dp"
                    android:inputType="text"
                    />
                /></android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="60dp"
                >
                <EditText
                    android:id="@+id/edit_cust_pin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height_lead"
                    android:maxLength="6"
                    android:layout_margin="5dp"
                    android:paddingLeft="4dp"
                    android:hint="SEP Pincode"
                    android:background="#FFFFFF"
                    android:inputType="number"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/edit_cust_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:paddingLeft="4dp"
                    android:hint="SEP address"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:singleLine="false"
                    tools:singleLine="false"
                    android:minLines="4"
                    android:gravity="top|left"
                    android:maxLines="10"
                    android:scrollbars="vertical"
                    />
                /></android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="60dp"
                >
                <EditText
                    android:id="@+id/edit_sep_area"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height_lead"
                     android:layout_margin="5dp"
                    android:paddingLeft="4dp"
                    android:hint="Area covering"
                    android:background="#FFFFFF"
                    android:inputType="textEmailAddress"
                    />
            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/spinner_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="2dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height_lead"
                android:layout_margin="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textColor="#000"
                    android:text="AR"
                    android:background="@drawable/round_corner"

                    />
                <EditText
                    android:id="@+id/edit_arcode"
                    android:layout_width="170dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:hint="ex.123456"
                    android:paddingLeft="5dp"
                    android:maxLength="6"
                    android:background="@drawable/round_corner"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/buttonsubmit"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:text="Submit"
                />

            <TextView
                android:id="@+id/textViewLocation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
